{
  "name": "loppep/peppol-directory-client",
  "description": "An API client for the Peppol directory",
  "type": "library",
  "require": {
    "php": "^7.4 || ^8.0",
    "ext-mbstring": "*",
    "ext-simplexml": "*",
    "paragonie/constant_time_encoding": "^2.8",
    "php-http/discovery": "^1.17",
    "psr/http-client": "*",
    "psr/http-client-implementation": "*",
    "psr/http-factory-implementation": "*"
  },
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Loppep\\PeppolDirectoryClient\\": "src/"
    }
  },
  "authors": [
    {
      "name": "Tom Schuermans",
      "email": "t.schuermans@gmail.com"
    }
  ],
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "php-http/discovery": false
    }
  },
  "require-dev": {
    "symfony/http-client": "^5.4",
    "nyholm/psr7": "^1.8"
  }
}
